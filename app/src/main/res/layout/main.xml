<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.martin.auction.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="383dp"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.52"
            android:contextClickable="false"
            android:focusable="false"
            android:onClick="onImageClick"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="395dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="399dp">

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="0.88"
            android:background="@android:color/holo_blue_light"
            android:elevation="0dp"
            android:text="Завантажити зображення" />

        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:freezesText="false"
            android:gravity="center"
            android:hapticFeedbackEnabled="false"
            android:hint="Ціна"
            android:inputType="numberDecimal"
            android:maxLength="10" />
    </LinearLayout>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="?android:attr/actionModeSplitBackground"
        android:ems="10"
        android:gravity="top"
        android:hint="Введіть опис товару"
        android:includeFontPadding="false"
        android:inputType="textMultiLine"
        android:saveEnabled="false"
        android:scrollHorizontally="false"
        android:scrollIndicators="right"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="vertical"
        android:selectAllOnFocus="false"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="469dp" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:elevation="0dp"
        android:text="Додати товар"
        tools:layout_editor_absoluteY="601dp"
        tools:layout_editor_absoluteX="8dp" />


</LinearLayout>
