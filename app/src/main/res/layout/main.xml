<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.martin.auction.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/button"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:elevation="0dp"
        android:text="Завантажити зображення"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="354dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="333dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteY="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:onClick="onClickEdtBox"
        android:text="@string/price"
        tools:layout_editor_absoluteY="354dp"
        tools:layout_editor_absoluteX="235dp" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="338dp"
        android:layout_height="106dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Введіть опис товару"
        tools:layout_editor_absoluteY="431dp"
        tools:layout_editor_absoluteX="36dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:text="Додати товар"
        tools:layout_editor_absoluteY="551dp"
        tools:layout_editor_absoluteX="139dp" />

</android.support.constraint.ConstraintLayout>
